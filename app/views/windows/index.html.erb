<h1>Windows Phone Push Notifications</h1>

<div>
<% so_far = RailsPushNotifications::MPNSApp.includes(:notifications).map(&:notifications).flatten.reduce([0, 0]) { |res, notif| [res[0] + notif.success, res[1] + notif.failed] } %>
<p>
<%= "#{so_far.reduce(&:+)} Notifications sent so far: #{so_far[0]} suceeded, #{so_far[1]} failed" %></p>
</div>

<%= render 'shared/flash' %>

<%= form_tag(windows_path, method: :post) do %>
  <div>
    <%= label_tag :destination, "Destination Token" %>
    <%= text_field_tag :destination %>
  </div>
  <div>
    <%= label_tag :message, "Message" %>
    <%= text_field_tag :message %>
  </div>
  <div>
    <%= label_tag :cert, "Pem encoded certificate" %>
    <%= text_area_tag :cert %>
  </div>
  <div>
    <%= submit_tag "Push!" %>
  </div>
<% end %>

